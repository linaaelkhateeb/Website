<%- include('../partials/header') %>
<%- include('../partials/sidebar') %>
<style>
  :root {
    --burgundy: #4B0101;
  }

  body {
    background: #fef9f4;
    font-family: 'Playfair Display', serif;
    margin: 0;
    padding: 0;
  }
    .main-content {
    flex: 1;
    padding-top: 100px;
    padding-bottom: 180px; /* ðŸ§± Enough space for the footer */
  }


  .delay-0 { animation-delay: 0s; }
  .delay-1 { animation-delay: 0.1s; }
  .delay-2 { animation-delay: 0.2s; }

  .search-section {
    display: flex;
    justify-content: center;
    margin: 100px auto 80px; /* Enough space from header and content */
    padding: 25px;
    max-width: 90%;
    background-color: #fff;
    border: 2px solid var(--burgundy);
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .search-section input[type="text"],
  .search-section input[type="number"] {
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #aaa;
    border-radius: 5px;
    width: 180px;
  }

  .search-section button {
    padding: 10px 20px;
    background: linear-gradient(to right, #502020, #806040);
    color: white;
    border: none;
    border-radius: 5px;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .search-section button:hover {
    background: linear-gradient(to right, #704040, #a08060);
  }

  

 .trips-section {
    padding: 4rem 2rem 6rem;
    width: 100%; /* âœ… make it full width */
    max-width: 1300px;
    margin: auto;
    min-height: 100vh;
  }

  .trips-section h1 {
    text-align: center;
    font-size: 2.8rem;
    margin-bottom: 3rem;
    color: var(--burgundy);
  }

  .trip-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* âœ… side-by-side layout */
    gap: 40px;
    width: 100%;
  }

  .trip-card {
    border: 2px solid var(--burgundy);
    border-radius: 8px;
    padding: 15px;
    background: #fff;
    box-shadow: 0 0 10px rgba(0,0,0,0.05);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    animation: fadeIn 0.6s ease forwards;
    opacity: 0;
  }

  .trip-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  }

  .trip-card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 6px;
    margin-bottom: 1rem;
  }

  .trip-card h3 {
    margin: 0.5rem 0;
    color: var(--burgundy);
    text-align: center;
  }

  .trip-card p {
    margin: 0.25rem 0;
    text-align: center;
  }

  .trip-card form {
    margin-top: 1rem;
  }

  .trip-card button {
    background-color: var(--burgundy);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .trip-card button:hover {
    background-color: #720909;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<div class="search-section">
  <form action="/trips/search" method="GET" style="display: flex; gap: 10px;">
    <input type="text" name="location" placeholder="Country" value="<%= (query && query.location) || '' %>" />
    <input type="number" name="priceMin" placeholder="Min Price" value="<%= (query && query.priceMin) || '' %>" />
    <input type="number" name="priceMax" placeholder="Max Price" value="<%= (query && query.priceMax) || '' %>" />
    <button type="submit">Search</button>
  </form>
</div>

<div class="trips-section">
  <h1>Available Trips</h1>
  <% if (trips.length === 0) { %>
    <p style="text-align: center;">No trips found.</p>
  <% } else { %>
    <div class="trip-grid">
      <% trips.forEach((trip, i) => { %>
        <div class="trip-card delay-<%= i %>">
          <img src="<%= trip.imageURL || '/images/default-trip.jpg' %>" alt="Trip image">
          <h3><%= trip.title %></h3>
          <p><strong>Price:</strong> $<%= trip.price %></p>
          <p><strong>Country:</strong> <%= trip.country?.name || 'Not specified' %></p>
<p><strong>Category:</strong> <%= trip.category?.name || 'Not specified' %></p>
<p><strong>Description:</strong> <%= trip.description || 'No description provided.' %></p>
          <form action="/bookings" method="POST">
            <input type="hidden" name="tripId" value="<%= trip._id %>">
            <button type="submit">Book Now</button>
          </form>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
