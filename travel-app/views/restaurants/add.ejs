<%- include('../partials/header') %>
<%- include('../partials/sidebar') %>

<!-- Include specific CSS for this page -->
<link rel="stylesheet" href="/restaurants.css" />

<div class="form-container">
    <h1>Add New Restaurant</h1>

    <% if (error) { %>
    <p class="error"><%= error %></p>
    <% } %> <% if (success) { %>
    <p class="success"><%= success %></p>
    <% } %>

    <form action="/restaurants/add" method="POST" enctype="multipart/form-data">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" required />

        <label for="description">Description:</label>
        <textarea name="description" id="description" rows="4"></textarea>

        <label for="cuisine">Cuisine:</label>
        <input type="text" name="cuisine" id="cuisine" />

        <label for="image">Upload Image:</label>
        <input type="file" name="image" id="image" accept="image/*" required />

        <label for="priceRange">Price Range:</label>
        <input type="text" name="priceRange" id="priceRange" />

        <label for="rating">Rating (1â€“5):</label>
        <input
            type="number"
            name="rating"
            id="rating"
            min="1"
            max="5"
            step="0.1"
        />

        <button type="submit">Add Restaurant</button>
    </form>
</div>

<%- include('../partials/footer') %>
