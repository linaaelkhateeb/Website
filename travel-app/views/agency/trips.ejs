<h1> Your Trips</h1>

<% if (success && success.length > 0) { %>
  <div class="alert success"><%= success %></div>
<% } %>

<ul>
  <% trips.forEach(trip => { %>
    <li>
      <strong><%= trip.title %></strong> –
      <%= trip.city %> – <%= trip.price %>$ –
      Status: <%= trip.isApproved ? ' Approved' : ' Pending' %>
    </li>
  <% }) %>
</ul>
