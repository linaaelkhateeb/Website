<link rel="stylesheet" href="/details.css">

<!-- Header Section -->
 <link rel="stylesheet" href="/homepage.css?v=3.14159" />
<header class="site-header">
  <div class="container">
    <!-- Logo -->
    <div class="logo">
      <h1><i class="fas fa-globe-americas"></i> ExploreMyCountry</h1>
    </div>

    <!-- Mobile menu toggle (hamburger icon) -->
    <div class="mobile-menu-toggle">
      <span class="hamburger"></span>
    </div>

    <!-- Main Navigation -->
    <nav class="main-nav">
      <ul>
        <li>
         <a href="/" id="homeLink"><i class="fas fa-home"></i> Home</a></li>   
        <li><a href="/countries"><i class="fas fa-flag"></i> Countries</a></li>
        <li><a href="/attractions"><i class="fas fa-mountain"></i> Attractions</a></li>
<% if (user && user.role === 'client' ) { %>
  <li>
    <a href="/bookings/mybookings">
      <i class="fas fa-suitcase-rolling"></i> My Bookings
    </a>
  </li>
<% } %>

        <!-- Auth buttons: wrapped properly inside the same <ul> -->
        <% if (user) { %>
          <li class="user-profile">
            <a href="#" class="profileToggle">
              <i class="fas fa-user-circle"></i> <%= user.name %>
            </a>
          </li>
          <li class="logout-btn">
            <a href="/logout">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
          </li>
        <% } else { %>
          <li class="login-btn">
            <a href="/login">
              <i class="fas fa-sign-in-alt"></i> Login
            </a>
          </li>
          <li class="signup-btn">
            <a href="/register">
              <i class="fas fa-user-plus"></i> Sign Up
            </a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
</header>
